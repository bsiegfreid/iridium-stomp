# See https://aka.ms/devcontainer for more information.
# This is a devcontainer configuration for Rust development.

{
    "name": "Rust Codespace",
    "image": "mcr.microsoft.com/devcontainers/rust:1-ubuntu-24.04",
    "features": {},
    "postCreateCommand": "rustup component add clippy rustfmt",
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb"
            ]
        }
    }
}
